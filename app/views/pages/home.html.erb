<% meta title: "Brew Buddy - Random Coffee Meetups", description: "Connect with amazing people in your community over a cup of coffee. One free match every month." %>

<div class="relative min-h-screen bg-[#1a0f0d] overflow-hidden">
  <!-- Coffee steam animation overlay -->
  <div class="absolute inset-0 opacity-20 bg-gradient-to-t from-transparent via-orange-100/10 to-transparent animate-steam"></div>

  <div class="relative pt-6 pb-16 sm:pb-24 lg:pb-32 text-amber-50">
    <main class="mt-16 mx-auto max-w-7xl px-4 sm:mt-24 sm:px-6 lg:mt-32">
      <div class="lg:grid lg:grid-cols-12 lg:gap-8">
        <div class="sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left">
          <h1>
            <span class="mt-1 block text-4xl tracking-tight font-extrabold sm:text-5xl xl:text-6xl">
              <span class="block">Meet Someone</span>
              <span class="block text-primary-500 animate-sparkle">Over Coffee</span>
            </span>
          </h1>
          <p class="mt-3 text-xl text-amber-100/80 sm:mt-5 sm:text-2xl lg:text-xl xl:text-2xl">
            Life's better with good coffee and great conversations. Get matched with interesting people in your community for coffee meetups.
          </p>
          <div class="mt-8 sm:max-w-lg sm:mx-auto sm:text-center lg:text-left lg:mx-0">
            <p class="text-base font-medium text-amber-100">
              One free match every month. No strings attached.
            </p>
            <form action="<%= new_user_registration_path %>" method="GET" class="mt-3 sm:flex">
              <label for="email" class="sr-only">Email</label>
              <input type="email" name="email" id="email" class="block w-full py-3 text-base rounded-md placeholder-amber-300/50 text-amber-900 bg-amber-100/90 shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:flex-1 border-transparent" placeholder="Enter your email to get started">
              <button type="submit" class="mt-3 w-full px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 shadow-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 sm:mt-0 sm:ml-3 sm:flex-shrink-0 sm:inline-flex sm:items-center sm:w-auto hover:scale-105 transition-all">
                <%= ab_test(:cta, 'Find My Coffee Buddy', 'Get Matched') %>
              </button>
            </form>
            <p class="mt-3 text-sm text-amber-200/60">
              Join our community of <%= rand(1000..5000) %> coffee enthusiasts. 
              <%= link_to 'How it works', '#', class: 'font-medium text-primary-400 hover:text-primary-300 underline' %>
            </p>
          </div>
        </div>
        <div class="mt-12 relative sm:max-w-lg sm:mx-auto lg:mt-0 lg:max-w-none lg:mx-0 lg:col-span-6 lg:flex lg:items-center">
          <div class="relative mx-auto w-full">
            <!-- Comic-style coffee meetup illustration -->
            <div class="relative animate-float">
              <svg class="w-full h-auto" viewBox="0 0 500 400" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Background elements -->
                <path class="animate-draw" d="M50 350 L450 350" stroke="#ff8c0d" stroke-width="4" stroke-linecap="round"/>
                <path class="animate-draw" d="M100 150 L100 350" stroke="#ff8c0d" stroke-width="4" stroke-opacity="0.3"/>
                <path class="animate-draw" d="M400 150 L400 350" stroke="#ff8c0d" stroke-width="4" stroke-opacity="0.3"/>
                
                <!-- Coffee shop window -->
                <rect x="80" y="100" width="340" height="250" rx="8" class="animate-draw" stroke="#ff8c0d" stroke-width="4" fill="none"/>
                
                <!-- Table -->
                <ellipse cx="250" cy="300" rx="80" ry="20" class="animate-draw" stroke="#ff8c0d" stroke-width="4" fill="none"/>
                
                <!-- Coffee cups -->
                <g class="animate-steam">
                  <path d="M200 270 Q200 260 210 260 H230 Q240 260 240 270" stroke="#ff8c0d" stroke-width="3" fill="none"/>
                  <path d="M300 270 Q300 260 310 260 H330 Q340 260 340 270" stroke="#ff8c0d" stroke-width="3" fill="none"/>
                  <!-- Steam from cups -->
                  <path class="animate-steam-path" d="M215 250 Q220 240 225 250" stroke="#ff8c0d" stroke-width="2" stroke-opacity="0.6"/>
                  <path class="animate-steam-path" d="M315 250 Q320 240 325 250" stroke="#ff8c0d" stroke-width="2" stroke-opacity="0.6"/>
                </g>
                
                <!-- Person 1 -->
                <g class="animate-draw">
                  <!-- Head -->
                  <circle cx="180" cy="200" r="25" stroke="#ff8c0d" stroke-width="3" fill="none"/>
                  <!-- Body -->
                  <path d="M180 225 L180 280" stroke="#ff8c0d" stroke-width="3"/>
                  <!-- Arms -->
                  <path d="M180 240 L150 260" stroke="#ff8c0d" stroke-width="3"/>
                  <path d="M180 240 L210 260" stroke="#ff8c0d" stroke-width="3"/>
                </g>
                
                <!-- Person 2 -->
                <g class="animate-draw">
                  <!-- Head -->
                  <circle cx="320" cy="200" r="25" stroke="#ff8c0d" stroke-width="3" fill="none"/>
                  <!-- Body -->
                  <path d="M320 225 L320 280" stroke="#ff8c0d" stroke-width="3"/>
                  <!-- Arms -->
                  <path d="M320 240 L290 260" stroke="#ff8c0d" stroke-width="3"/>
                  <path d="M320 240 L350 260" stroke="#ff8c0d" stroke-width="3"/>
                </g>
                
                <!-- Speech bubbles -->
                <g class="animate-fade-in">
                  <path d="M220 150 Q220 130 240 130 H260 Q280 130 280 150" stroke="#ff8c0d" stroke-width="2" fill="none"/>
                  <circle cx="230" cy="140" r="3" fill="#ff8c0d"/>
                  <circle cx="240" cy="140" r="3" fill="#ff8c0d"/>
                  <circle cx="250" cy="140" r="3" fill="#ff8c0d"/>
                </g>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
